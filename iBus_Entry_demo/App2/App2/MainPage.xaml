<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:App2"
            x:Class="App2.MainPage">
    <TabbedPage.Children>
 
        <ContentPage Title="查詢路缐">
            <StackLayout Spacing="20" Padding="20">
                <Entry x:Name="MainEntry"/>
                <Button Text="搜尋" 
                        Clicked ="ButtonClicked"/>
                <Label x:Name="MainLabel"/>
            </StackLayout>
        </ContentPage>
        <ContentPage Title="6670路缐 時刻表">
            <StackLayout Orientation="Vertical">
                <WebView Source ="http://web.taiwanbus.tw/eBUS/subsystem/Timetable/TimeTableAPIByWeek.aspx?RouteId=6670&amp;SearchDate=2017/07/26" WidthRequest="200" HeightRequest="600" />
            </StackLayout>
        </ContentPage>
        <ContentPage Title="6670路缐 票價">
            <StackLayout Orientation="Vertical">
                <WebView Source ="http://web.taiwanbus.tw/eBUS/subsystem/ticket/TMSquery.aspx?run_id=5140" WidthRequest="200" HeightRequest="600" />
            </StackLayout>
        </ContentPage>
    </TabbedPage.Children>
</TabbedPage>